@model IEnumerable<ECommerceMVC.ViewModels.HangHoaVM>


<h1 class="fw-bold mb-0">Sản phẩm mới</h1>
<div class="vesitable">
    <div class="owl-carousel vegetable-carousel justify-content-center">
        @foreach(var item in Model)
        {
            <div class="border border-primary rounded position-relative vesitable-item">
            <div class="vesitable-img">
                <a asp:action="Detail" asp:asp-controller="HangHoa" asp-route-id="@item.MaHang">
                       <img src="~/Hinh/HangHoa/@item.Hinh" class="img-fluid w-100 rounded-top" alt="">
                </a>
               
            </div>
            <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">@item.TenLoai</div>
            <div class="p-4 pb-0 rounded-bottom">
                <h4>@item.TenHang</h4>
                <p>@item.MoTa</p>
                <div class="d-flex justify-content-between flex-lg-wrap">
                    <p class="text-dark fs-5 fw-bold">$@item.DonGia / kg</p>
                    <a href="#" class="btn border border-secondary rounded-pill px-3 py-1 mb-4 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
                </div>
            </div>
        </div>
        }
        
    </div>
</div>