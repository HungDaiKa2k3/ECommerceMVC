@model IEnumerable<ECommerceMVC.Models.HangHoa>

<div class="col-lg-12">
    <h4 class="mb-3">Sản phẩm mới</h4>
    @foreach (var item in Model)
    {
        <div class="d-flex align-items-center justify-content-start">
            <div class="rounded me-4" style="width: 100px; height: 100px;">
                <a asp-action="Detail" asp:asp-controller="HangHoa" asp-route-id="@item.MaHh">
                    <img src="~/Hinh/HangHoa/@item.Hinh" class="img-fluid rounded" alt="@item.TenHh">
                </a>
            </div>
            <div>
                <h6 class="mb-2">@item.TenHh</h6>
                <div class="d-flex mb-2">
                    <i class="fa fa-star text-secondary"></i>
                    <i class="fa fa-star text-secondary"></i>
                    <i class="fa fa-star text-secondary"></i>
                    <i class="fa fa-star text-secondary"></i>
                    <i class="fa fa-star"></i>
                </div>
                <div class="d-flex mb-2">
                    <h5 class="fw-bold me-2">@item.DonGia</h5>
                    @* <h5 class="text-danger text-decoration-line-through">4.11 $</h5> *@
                </div>
            </div>
        </div>
    }
    <div class="d-flex justify-content-center my-4">
        <a href="#" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">Vew More</a>
    </div>
</div>

