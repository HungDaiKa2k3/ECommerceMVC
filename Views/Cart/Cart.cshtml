@model IEnumerable<ECommerceMVC.ViewModels.CartItem>

@foreach (var item in Model)
{
    <tr data-id="@item.MaHang">
        <th scope="row">
            <div class="d-flex align-items-center">
                <img src="~/Hinh/HangHoa/@item.Hinh" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="@item.TenHang">
            </div>
        </th>
        <td>
            <p class="mb-0 mt-4">
                <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHang">@item.TenHang</a>
            </p>
        </td>
        <td>
            <p id="donGia_@item.MaHang" class="mb-0 mt-4">@item.DonGia $</p>
        </td>
        <td>
            <div class="input-group quantity mt-4" style="width: 100px;">
                <div class="input-group-btn">
                    <button class="btn btn-sm btn-minus rounded-circle bg-light border btn-decrease">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <input type="text" id="textQuantity_@item.MaHang" class="form-control form-control-sm text-center border-0" value="@item.SoLuong">
                <div class="input-group-btn">
                    <button class="btn btn-sm btn-plus rounded-circle bg-light border btn-increase">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>
        </td>
        <td>
            <p id="total_@item.MaHang" class="mb-0 mt-4">@item.ThanhTien $</p>
        </td>
        <td>
            
            <button class="btn btn-md rounded-circle bg-light border mt-4 btn-remove-cart">
                <i class="fa fa-times text-danger"></i>
            </button>
        </td>
    </tr>
}
